@using System.Text.RegularExpressions;
@using OSDevGrp.MyDashboard.Web.Models;
@model InformationViewModel

<img src="@Model.ImageUrl" class="img-responsive" />
@if (string.IsNullOrWhiteSpace(@Model.Header) == false)
{
    <div class="carousel-caption" role="option">
        <p>
            @Model.Header
            @if (string.Compare(@Model.ExternalUrl, "#", StringComparison.OrdinalIgnoreCase) != 0)
            {
                <a class="btn btn-default" href="@Model.ExternalUrl" target="_blank">Read More</a>
            }
        </p>
    </div>
}
