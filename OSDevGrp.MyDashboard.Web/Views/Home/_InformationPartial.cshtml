@model InformationViewModel
<div class="card h-100">
    @if (string.IsNullOrWhiteSpace(Model.ImageUrl) == false)
    {
        <img class="card-img-top img-fluid" src="@Model.ImageUrl" />
    }
    <div class="card-body">
        @if (string.Compare(@Model.ExternalUrl, "#", StringComparison.OrdinalIgnoreCase) != 0 && string.IsNullOrWhiteSpace(Model.Header) == false)
        {
            <h5 class="card-title"><a href="#" onclick="javascript:$().openLink('@Model.ExternalUrl');">@Model.Header</a></h5>
        }
        else if (string.IsNullOrWhiteSpace(Model.Header) == false)
        {
            <h5 class="card-title">@Model.Header</h5>
        }
        @if (string.IsNullOrWhiteSpace(Model.Summary) == false)
        {
            <p class="card-text">@Model.Summary</p>
        }
    </div>
    <div class="card-footer">
        @if (Model.AgeInDays < 7)
        {
            <small class="text-muted">@Model.Timestamp.ToString("dddd") @Model.Timestamp.ToShortTimeString() - @Html.Raw(Model.AuthorOrProvider)</small>
        }
        else
        {
            <small class="text-muted">@Model.AgeInDays days ago - @Html.Raw(Model.AuthorOrProvider)</small>
        }
    </div>
</div>